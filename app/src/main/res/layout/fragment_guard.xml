<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightPurple_mainBackground"
    >


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/test_option"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="16dp"
        android:layout_marginTop="288dp"
        app:cardBackgroundColor="@color/navyBlue_optionCard"
        app:cardCornerRadius="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/therapy_option"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="16dp"
        android:layout_marginTop="184dp"
        app:cardBackgroundColor="@color/navyBlue_optionCard"
        app:cardCornerRadius="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/test_option" />

    <TextView
        android:id="@+id/text_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/archivo_black"
        android:text="MY TEST"
        android:textColor="#fff"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@id/test_option"
        app:layout_constraintTop_toTopOf="@id/test_option" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:fontFamily="@font/abeezee"
        android:text="Check your mental\n status"
        android:textColor="#fff"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@id/test_option"
        app:layout_constraintTop_toBottomOf="@id/text_test" />

    <ImageView
        android:id="@+id/img_test"
        android:src="@drawable/img_test"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="30dp"
        app:layout_constraintEnd_toEndOf="@id/test_option"
        app:layout_constraintTop_toTopOf="@id/test_option"/>

    <TextView
        android:id="@+id/text_therapy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/archivo_black"
        android:text="MY THERAPY"
        android:textColor="#fff"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@id/therapy_option"
        app:layout_constraintTop_toTopOf="@id/therapy_option" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/abeezee"
        android:layout_margin="20dp"
        android:text="Get your Mental\n Therapy"
        android:textColor="#fff"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@id/therapy_option"
        app:layout_constraintTop_toBottomOf="@id/text_therapy" />

    <ImageView
        android:id="@+id/img_therapy"
        android:src="@drawable/img_therapy"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="30dp"
        app:layout_constraintEnd_toEndOf="@id/therapy_option"
        app:layout_constraintTop_toTopOf="@id/therapy_option"/>





</androidx.constraintlayout.widget.ConstraintLayout>